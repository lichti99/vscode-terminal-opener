{
  "name": "vscode-terminal-opener",
  "displayName": "TerminalOpener",
  "author": "lichti99 <info@li-edv.de>",
  "publisher": "lichti99",
  "description": "Open an external terminal from vscode with the actual working path.",
  "version": "0.0.1",
  "icon": "icon.png",
  "keywords": [
    "terminal",
    "vscode"
  ],
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other"
  ],
  "homepage": "https://github.com/lichti99/vscode-terminal-opener",
	"repository": {
		"type": "git",
		"url": "https://github.com/lichti99/vscode-terminal-opener.git"
	},
  "bugs": {
    "url": "https://github.com/lichti99/vscode-terminal-opener/issues"
  },
  "license": "MIT",
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [      
      {
        "command": "terminal-opener.openterminal",
        "title": "Open Terminal",
        "category": "Terminal Opener"
      }
    ]
  },

  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.96.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "eslint": "^9.16.0",
    "typescript": "^5.7.2",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
